# ==============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ==============================================================================
# IMPORTANT: Copy this file to .env.production and fill in actual values
# NEVER commit .env.production to version control!
# ==============================================================================

# ==============================================================================
# Telegram Bot Configuration
# ==============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
ADMIN_TELEGRAM_USER_ID=your_telegram_user_id_here

# ==============================================================================
# OpenRouter API Configuration
# ==============================================================================
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1/chat/completions
MODEL_NAME=qwen/qwen3-235b-a22b-2507
TEMPERATURE=0.3
MAX_TOKENS=1000

# ==============================================================================
# Database Configuration
# ==============================================================================
DATABASE_PATH=/app/data/qa_search.db

# ==============================================================================
# Flask Configuration (CHANGE THESE!)
# ==============================================================================
# Generate secure random keys:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
FLASK_SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_KEY_32_CHARS_MIN
JWT_SECRET_KEY=CHANGE_THIS_TO_ANOTHER_SECURE_RANDOM_KEY_32_CHARS_MIN
FLASK_ENV=production

# ==============================================================================
# Server Configuration
# ==============================================================================
PORT=5000
HOST=0.0.0.0

# ==============================================================================
# Logging
# ==============================================================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# ==============================================================================
# Frontend Configuration
# ==============================================================================
# Set to your domain or /api if using nginx reverse proxy
VITE_API_URL=/api

# ==============================================================================
# JWT Configuration
# ==============================================================================
JWT_ACCESS_TOKEN_EXPIRES=86400  # 24 hours in seconds

# ==============================================================================
# CORS Configuration (if needed)
# ==============================================================================
# CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ==============================================================================
# Translation Configuration
# ==============================================================================
TRANSLATION_BATCH_SIZE=10
TRANSLATION_CACHE_FILE=/app/data/translation_cache.json

# ==============================================================================
# Parallel Translation
# ==============================================================================
MAX_CONCURRENT_REQUESTS=20
REQUESTS_PER_MINUTE=180

# ==============================================================================
# TESTING CREDENTIALS - REMOVE IN PRODUCTION!
# ==============================================================================
# Uncomment ONLY for initial testing, then remove or comment out
# TEST_USERNAME=
# TEST_PASSWORD=

# ==============================================================================
# Domain Configuration (for nginx)
# ==============================================================================
DOMAIN=your-domain.com
